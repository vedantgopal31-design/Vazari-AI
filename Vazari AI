    <script>
        // Cookie banner functionality
        function showCookieBanner() {
            const banner = document.getElementById('cookie-banner');
            if (!localStorage.getItem('cookieConsent')) {
                setTimeout(() => {
                    banner.classList.add('show');
                }, 1000);
            }
        }

        function acceptCookies() {
            localStorage.setItem('cookieConsent', 'accepted');
            document.getElementById('cookie-banner').classList.remove('show');
        }

        function declineCookies() {
            localStorage.setItem('cookieConsent', 'declined');
            document.getElementById('cookie-banner').classList.remove('show');
        }

        // Mobile menu functionality
        function toggleMobileMenu() {
            const menu = document.getElementById('mobile-menu');
            menu.classList.toggle('open');
        }

        // Waitlist modal functionality
        function joinWaitlist() {
            document.getElementById('waitlist-modal').classList.remove('hidden');
        }

        function closeWaitlistModal() {
            document.getElementById('waitlist-modal').classList.add('hidden');
        }

        function submitWaitlist(event) {
            event.preventDefault();
            const email = document.getElementById('email').value;
            const name = document.getElementById('name').value;
            
            // Simulate form submission
            alert(`Thanks ${name || 'there'}! We've added ${email} to our beta waitlist. You'll hear from us soon!`);
            closeWaitlistModal();
            
            // Reset form
            document.getElementById('email').value = '';
            document.getElementById('name').value = '';
        }

        function watchDemo() {
            alert('Demo video coming soon! Join our waitlist to be notified when it\'s available.');
        }

        // Smooth scrolling for navigation links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // Fade in animation on scroll
        function handleScrollAnimations() {
            const elements = document.querySelectorAll('.fade-in');
            elements.forEach(element => {
                const elementTop = element.getBoundingClientRect().top;
                const elementVisible = 150;
                
                if (elementTop < window.innerHeight - elementVisible) {
                    element.classList.add('visible');
                }
            });
        }

        // Demo typing animation
        function startDemoAnimation() {
            const demoText = document.getElementById('demo-text');
            const messages = [
                "Vazari: I noticed you're shopping for laptops. Would you like me to compare prices across different sites?",
                "Vazari: I found a better deal on this laptop at TechStore - $200 less than here. Should I open it?",
                "Vazari: I can auto-fill this checkout form with your saved information. Just click to confirm.",
                "Vazari: Based on your reading, here are 3 related articles you might find interesting."
            ];
            
            let currentMessage = 0;
            
            setInterval(() => {
                demoText.textContent = messages[currentMessage];
                currentMessage = (currentMessage + 1) % messages.length;
            }, 4000);
        }

        // Initialize everything when page loads
        document.addEventListener('DOMContentLoaded', function() {
            showCookieBanner();
            handleScrollAnimations();
            startDemoAnimation();
            
            // Handle scroll events
            window.addEventListener('scroll', handleScrollAnimations);
            
            // Close mobile menu when clicking outside
            document.addEventListener('click', function(event) {
                const menu = document.getElementById('mobile-menu');
                const menuButton = event.target.closest('button[onclick="toggleMobileMenu()"]');
                
                if (!menu.contains(event.target) && !menuButton && menu.classList.contains('open')) {
                    menu.classList.remove('open');
                }
            });
            
            // Close modal when clicking outside
            document.getElementById('waitlist-modal').addEventListener('click', function(event) {
                if (event.target === this) {
                    closeWaitlistModal();
                }
            });
        });
    </script>
